func BenchmarkRead(b *testing.B) {
	itemCounts := []int{10, 100, 200}

	for _, items := range itemCounts {
		b.Run(
			fmt.Sprintf("items-%d", items),
			func(b *testing.B) {
				for i := 0; i < b.N; i++ {
					b.StopTimer()
					list := NewDLinkedList(stringProcessor, 4)

					// Populate and process
					for j := 0; j < items; j++ {
